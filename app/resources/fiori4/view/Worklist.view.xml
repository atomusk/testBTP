<mvc:View
	controllerName="app_abn-fiori4.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/Viseo_Service',
					sorter: {
						path: 'OrderID',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished"
                mode="MultiSelect">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search=".onSearch"
                            visible="false"
							width="auto">
						</SearchField>
                        <Button
                            id="approveButton"
                            icon="sap-icon://cart-approval"  
                            tooltip="Approve Sales Order"
                            class="sapUiTinyMarginBeginEnd"
                            press=".onApprovePress">                        
                        </Button>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="nameColumn">
						<Text text="Order ID" id="orderID"/>
					</Column>
					<Column>
						<Text text="Description" id="orderDescription"/>
					</Column>
					<Column>
						<Text text="User" id="orderUser"/>
					</Column>
					<Column>
						<Text text="Status" id="orderStatus"/>
					</Column>
                    <Column>
						<Text text="Creation Date" id="creationDate"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
                        type="Active">
						<cells>
							<ObjectIdentifier
								title="{OrderID}"/>
							<ObjectIdentifier
								title="{SAP_Description}"/>
							<ObjectIdentifier
								title="{OrderUser}"/>
							<ObjectIdentifier
								title="{OrderStatus}"/>
                            <ObjectIdentifier
								title="{CreationDate}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<!--
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>
        <semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press=".onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{worklistView>/saveAsTileTitle}" />
		</semantic:saveAsTileAction>-->

	</semantic:SemanticPage>

</mvc:View>